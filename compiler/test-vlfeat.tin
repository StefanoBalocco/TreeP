(defnet test-vlfeat (func)
        (deflocal i)

        (lmatch remove func "vl-")
        (for i in (test-vlfeat-table) do
                until (= <i 0> func) )
        (= <i 0> func)
        (exprseq-ext <i 1> <i 2> (+ "  if(trp_vl_" (dash->underscore func) "(") "))")
        (flag-true "vlfeat") )

(defun test-vlfeat-table ()
        [ [ "sift-set-peak-thresh"      2 2 ]
          [ "sift-set-edge-thresh"      2 2 ]
          [ "sift-set-norm-thresh"      2 2 ]
          [ "sift-set-magnif"           2 2 ]
          [ "sift-set-window-size"      2 2 ]
          [ "sift-process-first-octave" 2 2 ]
          [ "sift-process-next-octave"  1 1 ]
          [ "sift-detect"               1 1 ]
          [ "sift-match-descr"          2 2 ]
        ] )

