(defnet test-mgl (func)
        (deflocal i)

        (lmatch remove func "mgl-")
        (for i in (test-mgl-table) do
                until (= <i 0> func) )
        (= <i 0> func)
        (exprseq-ext <i 1> <i 2> (+ "  if(trp_mgl_" (dash->underscore func) "(") "))")
        (flag-true "mgl") )

(defun test-mgl-table ()
        [ [ "write-bmp"         2 3 ]
          [ "write-jpg"         2 3 ]
          [ "write-png"         2 3 ]
          [ "write-png-solid"   2 3 ]
          [ "write-eps"         2 3 ]
          [ "write-svg"         2 3 ]
          [ "write-idtf"        2 3 ]
          [ "write-gif"         2 3 ]
          [ "update"            1 1 ]
          [ "box"               1 2 ]
          [ "set-light"         1 2 ]
          [ "rotate"            4 4 ]
          [ "data-modify"       3 3 ]
          [ "plot"              2 3 ]
          [ "surf"              2 3 ]
        ] )

